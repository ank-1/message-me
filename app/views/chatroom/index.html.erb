<h2 class="ui center aligned icon header">
  <i class="  circular coffee orange icon"></i>
  ChatRoom
</h2>
<div class="ui two column grid ">
  <div class="twelve wide column">
    <div class="ui card fluid raised card chatbox">
      <div class="content">
        <div class="ui  feed">
          <div class="event">
            <div class="content">

              <div class="summary">
                <%=render @messages %>
              </div>
            </div>
          </div>
        </div>
      </div>
